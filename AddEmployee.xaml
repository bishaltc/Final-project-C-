<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EmployeeManagementSystem.AddEmployee"
             Title="Add Employee">

    <StackLayout Padding="20">
        <Label Text="Add New Employee" FontSize="Large" HorizontalOptions="CenterAndExpand" Margin="0,20,0,10" />

        <Label Text="Name" />
        <Entry Placeholder="Enter name..." x:Name="nameEntry" />

        <Label Text="Position" />
        <Entry Placeholder="Enter position..." x:Name="positionEntry" />

        <Label Text="Rating" />
        <Entry Placeholder="Enter rating..." Keyboard="Numeric" x:Name="ratingEntry" />

        <Label Text="Email" />
        <Entry Placeholder="Enter email..." x:Name="emailEntry" />

        <Button Text="Add Employee" Clicked="AddEmployee_Clicked" />
    </StackLayout>

</ContentPage>
